              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rpm\": 3500,\n  \"torque\": 85.5,\n  \"maf\": 2500,\n  \"temperature\": 92.5,\n  \"fuelConsumption\": 12.8,\n  \"customSensor\": 100,\n  \"alertStatus\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sensor-data",
              "host": ["{{base_url}}"],
              "path": ["api", "sensor-data"]
            },
            "description": "Create a new sensor data entry. All fields except customSensor and alertStatus are required."
          },
          "response": []
        },
