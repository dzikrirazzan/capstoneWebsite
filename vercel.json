{
  "version": 2,
  "buildCommand": "cd api && npm install && npx prisma generate && cd ../frontend && npm install && npm run build",
  "installCommand": "echo 'Skipping root install'",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
