{
  "version": 2,
  "buildCommand": "cd frontend && npm ci && npm run build",
  "installCommand": "echo 'Skipping root install'",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
